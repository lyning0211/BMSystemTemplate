<script>
    //提交修改
    function UpDatePwd() {
        var userGUID = $("#UserGUID").val();
        var oldPwd = $("#OldPwd").val();
        var newPwd = $("#NewPwd").val();
        var newPwdToo = $("#NewPwdToo").val();
        if (userGUID.trim() == "") {
            layer.alert('用户不存在', { icon: 2 })
            return false;
        }
        if (oldPwd.trim() == "") {
            layer.alert('请输入原密码', { icon: 2 })
            return false;
        }
        if (newPwd.trim() == "") {
            layer.alert('请输入新密码', { icon: 2 })
            return false;
        }
        if (newPwd.trim().length < 8) {
            layer.alert('新密码至少需要8位字符', { icon: 2 })
            return false;
        }
        if (newPwdToo.trim() == "") {
            layer.alert('请再次输入新密码', { icon: 2 })
            return false;
        }
        if (newPwd.trim() != newPwdToo.trim()) {
            layer.alert('两次密码输入不一致，请重新输入', { icon: 2 })
            return false;
        }
        var ele = getAllDataByName("form1");
        $.ajax({
            type: "POST",
            url: "/Home/UpdatePwdData",
            contentType: 'application/x-www-form-urlencoded;charset=utf-8',
            data: { jsonData: JSON.stringify(ele) },
            dataType: "json",
            success: function (data) {
                if (data.Success == true) {
                    //修改成功
                    layer.alert(data.ReturnString, { icon: 1, closeBtn: 0 }, function () {
                        //var index = parent.layer.getFrameIndex(window.name);
                        //parent.layer.close(index);
                        parent.layer.close();
                        parent.location.href = "/Home/Default";
                    });
                }
                else {
                    //修改失败
                    layer.alert(data.ReturnString, { icon: 2 })
                }
            },
            error: function (e) {
                console.log(e);
            }
        });
    }
</script>