<script>
    var guid = "";
    $(function () {
        guid = getQueryString("UserGUID");
        bindUserRole();
        loadData();
    });

    //绑定角色
    function bindUserRole() {
        $.ajax({
            type: "POST",
            url: "/Project/BindRoleData",
            contentType: 'application/x-www-form-urlencoded;charset=utf-8',
            data: {},
            dataType: "json",
            success: function (data) {
                if (data.Success == true) {
                    $("#selUserRole").html(data.ReturnString);
                }
                else {
                    //加载失败
                    layer.alert(data.ReturnString, { icon: 2 })
                }
            },
            error: function (e) {
                console.log(e);
            }
        });
    }

    //装载信息
    function loadData() {
        if (guid != "") {
            $.ajax({
                type: "POST",
                url: "/Project/GetUserInfoData",
                contentType: 'application/x-www-form-urlencoded;charset=utf-8',
                data: { id: guid },
                dataType: "json",
                success: function (data) {
                    if (data.Success == true) {
                        setAllDataByName("form1", JSON.parse(data.ReturnString));
                    }
                    else {
                        //加载失败
                        layer.alert(data.ReturnString, { icon: 2 })
                    }
                },
                error: function (e) {
                    console.log(e);
                }
            });
        }
    }

    //提交保存
    function SaveData() {
        var userName = $("#UserName").val();
        if (userName.trim() == "") {
            layer.alert('请输入用户名', { icon: 2 })
            return false;
        }
        var userRole = $("#UserRole").val();
        if (userRole.trim() == "") {
            layer.alert('请选择角色', { icon: 2 })
            return false;
        }
        var ele = getAllDataByName("form1");
        ele.UserGUID = guid;
        $.ajax({
            type: "POST",
            url: "/Project/SaveUserInfoData",
            contentType: 'application/x-www-form-urlencoded;charset=utf-8',
            data: { jsonData: JSON.stringify(ele) },
            dataType: "json",
            success: function (data) {
                if (data.Success == true) {
                    //保存成功
                    layer.msg(data.ReturnString, { icon: 1 }, function () {
                        window.location = "/Project/UserIndex";
                    });
                }
                else {
                    //保存失败
                    layer.alert(data.ReturnString, { icon: 2 })
                }
            },
            error: function (e) {
                console.log(e);
            }
        });
    }
</script>

