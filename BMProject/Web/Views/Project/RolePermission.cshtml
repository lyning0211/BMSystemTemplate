<script type="text/javascript" src="~/Content/h-ui/lib/datatables/1.10.0/jquery.dataTables.min.js"></script>
<script type="text/javascript" src="~/Content/h-ui/lib/laypage/1.2/laypage.js"></script>
<script src="~/Content/js/jquery-ui.bm.js"></script>
<script type="text/javascript">
    var role_guid = "";
    $(function () {
        role_guid = getQueryString("RoleGUID");
        loadView();
    });

    //加载数据
    function loadView() {
        $.ajax({
            type: 'POST',
            url: "/Project/GetRolePermissionTableData",
            contentType: 'application/x-www-form-urlencoded;charset=utf-8',
            data: { roleGUID: role_guid },
            dataType: 'json',
            success: function (data) {
                if (data.Success == true) {
                    $(".table").html(data.ReturnString);
                    $("#ListCount").html(data.StrReturn);
                }
                else {
                    $("#ListCount").html("0");
                    //加载失败
                    layer.alert(data.ReturnString, { icon: 2 })
                }
            },
            error: function (e) {
                console.log(e);
            }
        });
    }

    //提交保存
    function SaveData() {
        if ($('[name="selAllData"]:checked').length == 0) {
            layer.msg("请选择菜单！", { icon: 2 });
            return false;
        }

        var idList = "";
        $('[name="selAllData"]:checked').each(function (i) {
            i == 0 ? idList += $(this).val() : idList += "," + $(this).val();
        });

        var pageobj = {};
        pageobj.RoleGUID = role_guid;
        pageobj.idList = idList;
        layer.confirm('确认要设置权限吗？', function (index) {
            $.ajax({
                type: 'POST',
                url: "/Project/SaveRolePermissionData",
                contentType: 'application/x-www-form-urlencoded;charset=utf-8',
                data: { jsonData: JSON.stringify(pageobj) },
                dataType: 'json',
                success: function (data) {
                    if (data.Success == true) {
                        //删除成功
                        layer.msg(data.ReturnString, { icon: 1 });
                        //1秒后跳转
                        setTimeout(function () { window.location = "/Project/RoleIndex"; }, 1000);
                    }
                    else {
                        //设置权限失败
                        layer.alert(data.ReturnString, { icon: 2 })
                    }
                },
                error: function (e) {
                    console.log(e);
                }
            });
        });
    }

    //全选
    function selAll(ele) {
        if ($(ele).is(":checked")) {
            $('[name="selAllData"]:visible').prop("checked", true);
        }
        else {
            $('[name="selAllData"]:visible').prop("checked", false);
        }
    }
</script>
